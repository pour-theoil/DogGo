@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h1 class="mb-4">Walker Details</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.NeighborhoodName</span>
        </div>

    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>
    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Walk.Date)
                        </th>
                        <th>
                            Client
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Walk.Duration)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Walks)
                    {
                        <tr>

                            <td>
                                @item.DatetoString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Client.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration) 
                                Min
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </section>
        <section>
            <h1>Total Walk duration</h1>
            <div>@Model.Totaltime.Hours 
                hours
                @Model.Totaltime.Minutes
                minutes
            
            </div>
        </section>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>